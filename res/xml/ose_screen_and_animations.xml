<?xml version="1.0" encoding="UTF-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/general_settings_title">

  <PreferenceScreen
        android:id="@+id/themes_settings"
        android:title="@string/themes_settings_title">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.tmobile.themechooser"
            android:targetClass="com.tmobile.themechooser.ThemeChooser" />
  </PreferenceScreen>

  <PreferenceCategory
        android:key="category_animation_options"
        android:title="@string/display_category_animation_options_title" >

       <PreferenceScreen
            android:id="@+id/animations"
            android:title="@string/title_animation_controls"
            android:fragment="com.android.settings.ose.fragments.AnimationControls" />

       <PreferenceScreen
            android:key="progressbar_settings"
            android:fragment="com.android.settings.ose.ProgressBar"
            android:title="@string/progressbar_title" />

       <PreferenceScreen
            android:fragment="com.android.settings.ose.BatteryIconStyle"
            android:key="battery_style_pref"
            android:title="@string/battery_icon_title" />

       <PreferenceScreen
            android:key="status_bar"
            android:fragment="com.android.settings.ose.StatusBar"
            android:title="@string/status_bar_title" />

       <ListPreference
            android:key="system_power_crt_mode"
            android:dialogTitle="@string/system_power_crt_mode_dialog_title"
            android:title="@string/system_power_crt_mode_title"
            android:entries="@array/entries_system_power_crt_mode"
            android:entryValues="@array/values_system_power_crt_mode" />

    </PreferenceCategory>

</PreferenceScreen>
